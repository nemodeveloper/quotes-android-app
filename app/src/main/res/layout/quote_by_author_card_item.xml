<?xml version="1.0" encoding="utf-8"?>

<ru.nemodev.project.quotes.mvp.author.detail.AuthorQuoteCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/quoteCardItem"
    card_view:cardElevation="2dp"
    card_view:cardCornerRadius="0dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:background="@color/quoteCardBackground">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">
        <TextView
            android:id="@+id/quoteText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="18sp"
            android:textColor="@color/quoteText"/>
        <RelativeLayout
            android:id="@+id/quoteActions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_below="@+id/quoteText"
            android:layout_centerVertical="true">
            <Button
                android:id="@+id/quoteCategoryButton"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/quote_but_category_height"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textSize="12sp"
                android:background="@drawable/category_button"
                android:stateListAnimator="@null"
                android:textColor="@color/quoteCategoryButton"/>
            <ImageView
                android:id="@+id/likeQuote"
                android:layout_width="@dimen/quote_but_like_size"
                android:layout_height="@dimen/quote_but_like_size"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_unlike"
                android:background="@null"
                android:layout_marginEnd="@dimen/quote_like_margin_right"
                android:layout_toStartOf="@id/shareQuote"/>
            <ImageView
                android:id="@+id/shareQuote"
                android:layout_width="@dimen/quote_but_share_size"
                android:layout_height="@dimen/quote_but_share_size"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_share"
                android:background="@null"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
    </RelativeLayout>
</ru.nemodev.project.quotes.mvp.author.detail.AuthorQuoteCardView>

