<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="ru.nemodev.project.quotes.mvp.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/AppTheme.PopupOverlay"
                app:title="Цитаты" />

        </android.support.design.widget.AppBarLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <in.myinnos.alphabetsindexfastscrollrecycler.IndexFastScrollRecyclerView
                android:id="@+id/authorList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/not_full_content_message">
            </in.myinnos.alphabetsindexfastscrollrecycler.IndexFastScrollRecyclerView>

            <ProgressBar
                android:id="@+id/contentLoadingProgressBar"
                android:layout_width="100dp"
                android:layout_height="100dp"
                style="@android:style/Widget.Material.ProgressBar.Small"
                android:layout_centerInParent="true"/>

            <TextView
                android:id="@+id/not_full_content_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:textAlignment="center"
                android:layout_alignParentBottom="true"
                android:background="@color/notFullContentBackground"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:text="@string/not_full_authors_message"/>
        </RelativeLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>