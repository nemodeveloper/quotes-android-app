<?xml version="1.0" encoding="utf-8"?>

<ru.nemodev.project.quotes.mvp.base.BaseQuoteCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/quoteCardItem"
    card_view:cardElevation="2dp"
    card_view:cardCornerRadius="0dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:background="@color/quoteCardBackground">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">
        <RelativeLayout
            android:id="@+id/authorBlock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/authorImg"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:scaleType="centerCrop"/>
            <RelativeLayout
                android:id="@+id/authorNameBlock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/authorImg"
                android:layout_toEndOf="@+id/authorImg"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_centerVertical="true">
                <TextView
                    android:id="@+id/authorName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="@color/quoteAuthor"/>
                <TextView
                    android:id="@+id/quoteSource"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/authorName"
                    android:textSize="14sp"
                    android:textColor="@color/quoteSource"/>
            </RelativeLayout>
        </RelativeLayout>
        <TextView
            android:id="@+id/quoteText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/authorBlock"
            android:layout_marginTop="8dp"
            android:textSize="18sp"
            android:textColor="@color/quoteText"/>
        <RelativeLayout
            android:id="@+id/quoteActions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_below="@+id/quoteText"
            android:layout_centerVertical="true">
            <Button
                android:id="@+id/quoteCategoryButton"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textSize="12sp"
                android:background="@drawable/category_button"
                android:stateListAnimator="@null"
                android:textColor="@color/quoteCategoryButton"/>
            <ImageView
                android:id="@+id/likeQuote"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_unlike"
                android:background="@null"
                android:layout_marginEnd="@dimen/quote_like_margin_right"
                android:layout_toStartOf="@id/shareQuote"/>
            <ImageView
                android:id="@+id/shareQuote"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_share"
                android:background="@null"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
    </RelativeLayout>
</ru.nemodev.project.quotes.mvp.base.BaseQuoteCardView>

